<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingTop="64dp"
    android:paddingEnd="24dp"
    tools:context=".ConfirmTicksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Score Layout -->
        <LinearLayout
            android:id="@+id/current_score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_score_player1_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="player 1: 25" />

            <TextView
                android:id="@+id/current_score_player2_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="player 2: 65" />

            <TextView
                android:id="@+id/current_score_player3_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="player 3: 44" />

            <TextView
                android:id="@+id/current_score_player4_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="Player 4: 33" />

        </LinearLayout>

        <!-- Runde -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/round_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/patrick_hand"
            android:gravity="center"
            android:textColor="@color/text_header"
            android:textSize="54sp"
            tools:text="Round X" />

        <!-- Spieler-Layouts -->

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:progress="40"
            android:progressTint="@color/spinnerText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <!-- Spieler 1 -->
            <LinearLayout
                android:id="@+id/player1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player1_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/patrick_hand"
                        android:gravity="center"
                        android:textColor="@color/text_muted"
                        android:textSize="28sp"
                        tools:text="Player 1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player1_amount_of_tricks_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|end"
                            android:textColor="@color/spinnerText"
                            android:textSize="18sp"
                            tools:text="0 Tricks" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1" />

                        <TextView
                            android:id="@+id/player1_points_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|start"
                            android:textColor="@color/text_muted"
                            android:textSize="18sp"
                            tools:text="+5 Points" />
                    </LinearLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/player1_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:buttonTint="@color/checkBoxColor"
                    android:scaleX="1.2"
                    android:scaleY="1.2" />

            </LinearLayout>

            <!-- Spieler 2 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/player2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player2_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/patrick_hand"
                        android:gravity="center"
                        android:textColor="@color/text_muted"
                        android:textSize="28sp"
                        tools:text="Player 2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player2_amount_of_tricks_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|end"
                            android:textColor="@color/spinnerText"
                            android:textSize="18sp"
                            tools:text="1 Trick" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1" />

                        <TextView
                            android:id="@+id/player2_points_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|start"
                            android:textColor="@color/text_muted"
                            android:textSize="18sp"
                            tools:text="+6 Points" />
                    </LinearLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/player2_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:buttonTint="@color/checkBoxColor"
                    android:scaleX="1.2"
                    android:scaleY="1.2" />

            </LinearLayout>

            <!-- Spieler 3 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/player3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player3_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/patrick_hand"
                        android:gravity="center"
                        android:textColor="@color/text_muted"
                        android:textSize="28sp"
                        tools:text="Player 3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player3_amount_of_tricks_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|end"
                            android:textColor="@color/spinnerText"
                            android:textSize="18sp"
                            tools:text="0 Tricks" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1" />

                        <TextView
                            android:id="@+id/player3_points_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|start"
                            android:textColor="@color/text_muted"
                            android:textSize="18sp"
                            tools:text="+5 Points" />
                    </LinearLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/player3_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:buttonTint="@color/checkBoxColor"
                    android:scaleX="1.2"
                    android:scaleY="1.2" />

            </LinearLayout>

            <!-- Spieler 4 -->
            <Space
                android:id="@+id/player4_space"
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/player4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player4_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/patrick_hand"
                        android:gravity="center"
                        android:textColor="@color/text_muted"
                        android:textSize="28sp"
                        tools:text="Player 4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player4_amount_of_tricks_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|end"
                            android:textColor="@color/spinnerText"
                            android:textSize="18sp"
                            tools:text="3 Tricks" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1" />

                        <TextView
                            android:id="@+id/player4_points_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/patrick_hand"
                            android:gravity="center|start"
                            android:textColor="@color/text_muted"
                            android:textSize="18sp"
                            tools:text="+8 Points" />
                    </LinearLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/player4_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:buttonTint="@color/checkBoxColor"
                    android:scaleX="1.2"
                    android:scaleY="1.2" />

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/start_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:elevation="3dp"
                android:fontFamily="@font/patrick_hand"
                android:text="@string/start"
                android:textColor="@color/text_button"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2" />

        <!-- ...optional weitere AbstÃ¤nde... -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>