<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingTop="64dp"
    android:paddingEnd="24dp"
    tools:context=".DealCardsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Score Layout -->

        <LinearLayout
            android:id="@+id/current_score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/current_score_player1_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="player 1: 25" />

            <TextView
                android:id="@+id/current_score_player2_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="player 2: 65" />

            <TextView
                android:id="@+id/current_score_player3_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="player 3: 44" />

            <TextView
                android:id="@+id/current_score_player4_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patrick_hand"
                android:gravity="center"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                app:autoSizeTextType="none"
                tools:text="Player 4: 33" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/round_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/patrick_hand"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_header"
            android:textSize="54sp"
            tools:text="Round X" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:progress="40"
            android:progressTint="@color/spinnerText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/patrick_hand"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/declare_how_many_tricks_they_expect_to_win"
            android:textColor="@color/text_muted"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/player1_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/patrick_hand"
                    android:gravity="center|center_horizontal|start"
                    android:textColor="@color/text_muted"
                    android:textSize="32sp"
                    tools:text="Player 1" />

                <com.nwe.spadesscore.TrickSpinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp" />


            </LinearLayout>

            <!-- Abstand 8dp -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/player2_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/patrick_hand"
                    android:gravity="center|center_horizontal|start"
                    android:textColor="@color/text_muted"
                    android:textSize="32sp"
                    tools:text="Player 2" />

                <com.nwe.spadesscore.TrickSpinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp" />
            </LinearLayout>

            <!-- Abstand 8dp -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/player3_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/patrick_hand"
                    android:gravity="center|center_horizontal|start"
                    android:textColor="@color/text_muted"
                    android:textSize="32sp"
                    tools:text="Player 3" />

                <com.nwe.spadesscore.TrickSpinner
                    android:id="@+id/spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp" />
            </LinearLayout>

            <!-- Abstand 8dp -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/player4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/player_bg_rounded"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/player4_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/patrick_hand"
                    android:gravity="center|center_horizontal|start"
                    android:textColor="@color/text_muted"
                    android:textSize="32sp"
                    tools:text="Player 4" />

                <com.nwe.spadesscore.TrickSpinner
                    android:id="@+id/spinner4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/combined_tricks_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/patrick_hand"
            android:textAlignment="center"
            android:textColor="@color/text_muted"
            android:textSize="24sp"
            tools:text="3/3 Tricks" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/start_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/option_button"
                android:elevation="3dp"
                android:fontFamily="@font/patrick_hand"
                android:text="@string/confirm_ticks"
                android:textColor="@color/text_button"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>