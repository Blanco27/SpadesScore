<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/background_third"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="@color/spinnerAccent"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape>
            <solid android:color="@color/background_third"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
