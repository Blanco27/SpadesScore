<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SELECTED -->
    <item android:state_selected="true">
        <transition>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_button_enabled"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_second"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </transition>
    </item>

    <!-- DEFAULT UNSELECTED -->
    <item>
        <transition>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_second"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_button_enabled"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </transition>
    </item>

</selector>
